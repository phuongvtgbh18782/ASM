</head>

<body>
    <center><h1>Edit Product</h1></center>
    {{>footer}}
    <br>
    <form action="/doEdit" method="post" class="box">
        <h1>Edit Product</h1>
        <br>
        <input type="hidden" name="id" value="{{model._id}}">
        <h4>Name:</h4> <input type="text" name="txtName" value="{{model.productName}}" placeholder="Name">
        <h4>Size:</h4> <input type="text" name="txtSize" value="{{model.size}}" placeholder="Size">
        <h4>Amount:</h4> <input type="text" name="txtAmount" value="{{model.amount}}" placeholder="Amount">
        <h4>Price: </h4> <input type="text" name="txtPrice" value="{{model.price}}" placeholder="Price">
        <br>
        <input type="submit" value="Update">
    </form>

</body>

</html>